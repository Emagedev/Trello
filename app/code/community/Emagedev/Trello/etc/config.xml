<config>
    <modules>
        <Emagedev_Trello>
            <version>0.7.0</version>
        </Emagedev_Trello>
    </modules>
    <global>
        <blocks>
            <trello>
                <class>Emagedev_Trello_Block</class>
            </trello>
        </blocks>
        <models>
            <trello>
                <class>Emagedev_Trello_Model</class>
                <resourceModel>trello_resource</resourceModel>
            </trello>
            <trello_resource>
                <class>Emagedev_Trello_Model_Resource</class>
                <entities>
                    <order>
                        <table>trello_order</table>
                    </order>
                    <card>
                        <table>trello_order</table>
                    </card>
                    <list>
                        <table>trello_list</table>
                    </list>
                    <action>
                        <table>trello_action</table>
                    </action>
                    <member>
                        <table>trello_member</table>
                    </member>
                    <webhook>
                        <table>trello_webhook</table>
                    </webhook>
                </entities>
            </trello_resource>
        </models>
        <helpers>
            <trello>
                <class>Emagedev_Trello_Helper</class>
            </trello>
        </helpers>
        <resources>
            <omederc_trello_setup>
                <setup>
                    <module>Emagedev_Trello</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </omederc_trello_setup>
        </resources>
        <events>
            <sales_order_save_after>
                <observers>
                    <order_update_trello_card>
                        <class>trello/observer</class>
                        <method>updateOrderCard</method>
                    </order_update_trello_card>
                </observers>
            </sales_order_save_after>
        </events>
    </global>
    <crontab>
        <jobs>
            <mark_order_cards_outdated_or_archive>
                <schedule>
                    <cron_expr>30 2 * * *</cron_expr>
                </schedule>
                <run>
                    <model>trello/observer::markOrArchiveOutdatedOrders</model>
                </run>
            </mark_order_cards_outdated_or_archive>
        </jobs>
    </crontab>
    <adminhtml>
        <translate>
            <modules>
                <Emagedev_Trello>
                    <files>
                        <default>Emagedev_Trello.csv</default>
                    </files>
                </Emagedev_Trello>
            </modules>
        </translate>
        <events>
            <adminhtml_sales_order_grid_prepare_mass_action>
                <observers>
                    <order_grid_add_trello_mass_update>
                        <class>trello/observer</class>
                        <method>addMassTrelloUpdate</method>
                    </order_grid_add_trello_mass_update>
                </observers>
            </adminhtml_sales_order_grid_prepare_mass_action>
            <sales_order_status_history_save_after>
                <observers>
                    <order_status_history_to_trello>
                        <class>trello/observer</class>
                        <method>sendTrelloAction</method>
                    </order_status_history_to_trello>
                </observers>
            </sales_order_status_history_save_after>
        </events>
        <layout>
            <updates>
                <emagedev_trello>
                    <file>trello.xml</file>
                </emagedev_trello>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <trello before="Mage_Adminhtml">Emagedev_Trello_Adminhtml</trello>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <frontend>
        <routers>
            <trello>
                <use>standard</use>
                <args>
                    <module>Emagedev_Trello</module>
                    <frontName>trello_secret_callback</frontName>
                </args>
            </trello>
            <emagedev_trello_adminhtml>
                <use>standard</use>
                <args>
                    <module>Emagedev_Trello</module>
                    <frontName>adminhtml</frontName>
                </args>
            </emagedev_trello_adminhtml>
            <emagedev_trello_trello>
                <use>standard</use>
                <args>
                    <module>Emagedev_Trello</module>
                    <frontName>trello</frontName>
                </args>
            </emagedev_trello_trello>
        </routers>
        <translate>
            <modules>
                <Emagedev_Trello>
                    <files>
                        <default>Emagedev_Trello.csv</default>
                    </files>
                </Emagedev_Trello>
            </modules>
        </translate>
    </frontend>
    <default>
        <trello_api>
            <order_status>
                <card_template><![CDATA[
Customer: {{var customer}}
Grand Total: {{var grand_total}}
Created At: {{var created_at}}
]]>
                </card_template>
            </order_status>
            <webhook>
                <status>1</status>
                <check>Never</check>
            </webhook>
            <developer>
                <debug_log>0</debug_log>
            </developer>
        </trello_api>
    </default>
    <phpunit>
        <suite>
            <modules>
                <Emagedev_Trello/>
            </modules>
        </suite>
    </phpunit>
</config>

